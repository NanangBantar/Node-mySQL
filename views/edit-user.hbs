<div class="card border-0">
    <h5 class="card-header p-3 bg-transparent mb-2"><i class="bi bi-person-plus-fill"></i> Edit User</h5>
    <div class="card-body">

        {{#if alert}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{alert}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}

        {{#each rows}}
        <form method="POST" action="/edituser/{{this.id}}">
        {{> user-form}}
        </form>
        {{/each}}

    </div>
</div>