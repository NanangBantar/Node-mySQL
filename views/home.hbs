<div class="col-12">
<label class="mb-1 h4">Search Data By Name</label>
<a href="/adduser" class="btn btn-success mb-2"><i class="bi bi-person-plus-fill"></i> Add user</a>
</div>
<form class="d-flex mb-2" method="POST" action="/">
    <input class="form-control me-2" type="search" placeholder="Search" name="searchIpt" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Comment</th>
            <th scope="col">Phone</th>
            <th class="text-center" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <th scope="row">{{@index}}</th>
            <td>{{this.firstname}}</td>
            <td>{{this.lastname}}</td>
            <td>{{this.email}}</td>
            <td>{{this.comment}}</td>
            <td>{{this.phone}}</td>
            <td class="text-center">
                <a href="/viewuser/{{this.id}}" class="btn btn-primary btn-small text-white"><i class="bi bi-eye"></i> View</a>
                <a href="/edituser/{{this.id}}" class="btn btn-warning btn-small text-white"><i class="bi bi-pencil"></i> Edit</a>
                <a href="/deleteuser/{{this.id}}" class="btn btn-danger btn-small text-white"><i class="bi bi-person-x"></i> Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>